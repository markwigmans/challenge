<Configuration monitorInterval="30">
    <Appenders>
        <Console name="console" follow="true">
            <PatternLayout pattern="%d %-5p [%t] %c{1.} - %m%n"/>
            <ThresholdFilter level="info"/>
        </Console>

        <Socket name="logstash" host="logstash" port="7000">
            <SerializedLayout />
        </Socket>

        <Async name="async">
            <AppenderRef ref="logstash"/>"
            <AppenderRef ref="console"/>
        </Async>
    </Appenders>

    <Loggers>
        <Logger name="com.ximedes.sva" level="info"/>

        <Root level="info">
            <AppenderRef ref="async"/>
        </Root>
    </Loggers>
</Configuration>